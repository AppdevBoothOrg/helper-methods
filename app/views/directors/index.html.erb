<h1>
  List of all directors
</h1>

<hr>

<div>
  <%= link_to "Add a new director", new_director_path%>
</div>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      First name
    </th>

    <th>
      Last name
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @directors.each do |a_director| %>
  <tr>
    <td>
      <%= a_director.id %>
    </td>

    <td>
      <%= a_director.first_name %>
    </td>

    <td>
      <%= a_director.last_name %>
    </td>

    <td>
      <%= time_ago_in_words(a_director.created_at) %> ago
    </td>
    <td>
      <%= time_ago_in_words(a_director.updated_at) %> ago
    </td>

    <td>
      <%= link_to "Show details", a_director%>
    </td>
  </tr>
  <% end %>
</table>
